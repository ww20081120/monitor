                { "data": "process", "mRender":function (data) {
                   return "<div style='width:164px;word-wrap:break-word;'>" + data + "</div>";
                }},
                {"data": "user"},
                {"data": "cpu"},
                {"data": "memory"},
            ],
            "fnRowCallback": function (row, data) { // 每行创建完毕的回调
                $(row).data('recordId', data.recordId);
            }
        });
    }

