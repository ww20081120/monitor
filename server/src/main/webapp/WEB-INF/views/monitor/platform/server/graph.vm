            "paginationType": "full_numbers", // 页码类型
            "destroy": true,
            "bLengthChange": false,
            "processing": false,
            "serverSide": false,
            "displayLength": 0, // 默认长度
            "language": {
                     "paginate": {
                                 "last": "",
                                 "next": "",
                                 "sPrevious": "",
                               },
                       "sInfo":"",
                    },
            "bPaginate" : false, 
            "ajax": { // 请求地址
                "url": "/monitor/platform/server/process?ip=$!{ip}&t=" + new Date().getTime(),
                "type": 'post'
            },

