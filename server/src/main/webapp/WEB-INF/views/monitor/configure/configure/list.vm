<script>
    var site = "configure"
    function addConfig(id, copy){
        if(!id){
            id=0;
        }
        if(!copy){
            copy = ""
        }
        url = "/monitor/configure/"+site+"/add";
        html = post({id:id, copy:copy}, url);
        $('#addConfig').html(html);
        $('#add_getui_config').modal('toggle');
        if(!id){
            $('#inlineCheckbox1').attr("checked",true);
            $('#inlineCheckbox2').attr("checked",true);
            $('#inlineCheckbox3').attr("checked",true);
            $('#inlineCheckbox4').attr("checked",true);
            $('#checkbox5').attr("checked",true);
        }
    }

    function deleteConfig(id){
        url = "/monitor/configure/"+site+"/delete";
        parent.layer.confirm("点击同意后,将删除数据", {
            btn: ['同意','不同意'], //按钮
            shade: false//不显示遮罩
        }, function(){
            result = post({id:id}, url);
            parent.layer.msg(JSON.stringify(result),  {icon:1})
            $('#listTable').dataTable().fnReloadAjax();
        }, function(){
            parent.layer.msg("取消操作",  {icon:2})
        });
    }

    /**
     * 获取多选的值
     */
    function getMutilSelect(id,t) {
        to = $('#'+id).html().replace(/<option value="/g,"");
        to = to.replace(/<\/option>/g," ");
        to = to.replace(/"/g,"")
        to = to.replace(/>/g," ")
        to_hosts = to.split(" ")
        hosts_ip = ""
        hosts = ""
        for(i=0;i<to_hosts.length;i++){
            if(t) {
                if (to_hosts[i].indexOf(".") != -1) {
                    hosts_ip += to_hosts[i] + ",";
                } else {
                    hosts += to_hosts[i] + ",";
                }
            }else{
                if(!isNaN(to_hosts[i])) {
                    hosts += to_hosts[i] + ",";
                }
            }
        }
        hosts_ip = hosts_ip.substring(0,hosts_ip.length-1)
        hosts = hosts.substring(0,hosts.length-2)
        return [hosts.replace(/[\r\n]/g,"").trim().replace(/[ ]/g,"").replace(/\ +/), hosts_ip]
    }

    function saveConfig(id){
        data = get_form_data();
        if(id){
            data["configureId"] = id;
        }

        if(!data["description"]){
            parent.layer.msg("描述信息必须填写",  {icon:2});
            return;
        }

        if(!data["monitorConfigureTp"]){
            parent.layer.msg("监控配置方式必须选择",  {icon:2});
            return;
        }
        if(!data["monitorHostsTp"]){
            parent.layer.msg("主机配置方式必须选择",  {icon:2});
            return;
        }

        // 处理报警接收人的数据
        if(data["isWeixin"].trim()=="1" && data["isDing"].trim() == "1" && data["isMobile"].trim() == "1" && data["isEmail"].trim() == "1"){
            $('#undo_contact_weixin_mobile_redo_to').html("")
            $('#undo_contact_group_mobile_redo_to').html("")
            $('#undo_contact_group_redo_to').html("")
            $('#undo_contact_ding_mobile_redo_to').html("")
        }else{
            $('#undo_contact_all_redo_to').html("")
        }

        data["hosts"] = getMutilSelect("undo3_redo_to",1)[0]
        data["ipList"] = getMutilSelect("undo3_redo_to",1)[1]
//        data["gname"] = $('#selectGroupsId option:selected').text()
        data["weixinGroups"] = getMutilSelect("undo_contact_weixin_mobile_redo_to")[0]
        data["mobileGroups"] = getMutilSelect("undo_contact_group_mobile_redo_to")[0]
        data["emailGroups"] = getMutilSelect("undo_contact_group_redo_to")[0]
        data["dingGroups"] = getMutilSelect("undo_contact_ding_mobile_redo_to")[0]
        data["allGroups"] = getMutilSelect("undo_contact_all_redo_to")[0]
        data["templateId"] = getMutilSelect("undo2_redo_to")[0]

        // 报警升级
        if(data["alarm_up"] == "1"){
          for(icount=1;icount<6;icount++){
             var alarmCount = data["alarmCount"+icount]
             if(!alarmCount){break}
             users  = getMutilSelect("undo_contact_all_alarm_up_"+icount+"_redo_to")[0]
             if(!users){
                 break; 
             }
             var add_data = ",0|"+alarmCount+";"+users
             if(data["allGroups"]){
               data["allGroups"] += add_data 
             }
             if(data["weixinGroups"]){
               data["weixinGroups"] += add_data 
             }
             if(data["mobileGroups"]){
               data["mobileGroups"] += add_data 

             }
             if(data["emailGroups"]){
               data["emailGroups"] += add_data 
             }
             if(data["dingGroups"]){
               data["dingGroups"] += add_data 

             }
          }
        }
        console.log(data)

        // 如果是单机选择的，则去掉组的选择值
        if(data["monitorHostsTp"]=="host"){
            data["gname"] = ""
        }

        // 如果为组类型,取消单机选择的值
        if(data["monitorHostsTp"]=="groups"){
            data["hosts"] = ""
            data["ipList"] = ""
        }

        // 如果数据为template，则清空其他配置
        if(data["monitorConfigureTp"] == "template"){
            data["scriptId"] = ""
            data["itemId"] = ""
            for(i=1;i<9;i++){
                data["arg"+i] = ""
            }
        }
        // 如果为host，则清除其他的配置
        if(data["monitorConfigureTp"] == "host") {
            data["templateId"] = ""
            data["itemId"] = ""
        }

        // 如果为item，则清除其他的数据
        if(data["monitorConfigureTp"] == "item") {
            data["scriptId"] = ""
            data["templateId"] = ""
            if(!data["itemId"] || data["itemId"] == "--请选择--"){
                parent.layer.msg("请正确选择一个监控项目",  {icon:2});
                return;
            }
        }

        url = "/monitor/configure/"+site+"/save";
        result = post(data, url);
        parent.layer.msg(JSON.stringify(result),  {icon:1});
        $('#listTable').dataTable().fnReloadAjax();
    }

    function loadData(groupsName){
        if(!groupsName){
            groupsName = ""
        }
        $("#listTable").dataTable({
            "filter": true,//去掉搜索框
            "ordering": false, // 是否允许排序
            "paginationType": "full_numbers", // 页码类型
            "destroy": true,
            "processing": true,
            "serverSide": true,
            "scrollX": true, // 是否允许左右滑动
            "displayLength": 10, // 默认长度
            "ajax": { // 请求地址
                "url": "/monitor/configure/"+site+"/listData?t=" + new Date().getTime()+"&groupsName="+groupsName+"&itemId=$!{itemId}",
                "type": 'post'
            },

            "columns": [ // 数据映射
                {"data": "monitorConfigureTp","mRender":function(data){
                    if(data=="host"){
                        return "单机"
                    }
                    if(data=="item"){
                          return "项目"
                    }
                    if(data=="template"){
                        return "模板"
                    }
                }},
                {"data": "monitorHostsTp", "mRender":function (data) {
                    if(data == "host"){
                        return "单机"
                    }
                    if(data=="groups"){
                        return "组"
                    }
                }},
                {"data": "gname"},
                {"data": "hosts", "mRender":function (data) {
                    if(data) {
                        if (data.substring(data.length, data.length-1) == ","){
                            data = data.substring(0, data.length-1);
                        }
                        return '<a onclick="show_hosts(\'' + data + '\')">' + (data.split(",").length ) + '<span style="margin-left: 20px;"></span><i class="fa fa-users"></i></a>';
                    }
                }},
                {"data": "groupsName"},
                {"data": "alarmCount"},
                {"data": "alarmInterval"},
                {"data": "isValid","mRender":function (data) {
                    if(data=="1"){
                        return "<span style='color:green'>有效</span>";
                    }else {
                        return "<span style='color:red'>无效</span>";
                        "";
                    }
                }},
                {"data": "configureId", "mRender": function(data, type, full) {
                    return '<a  onclick="show_cache(\''+data+'\',\'item\')"><i style="margin-left: 25px;" class="fa fa-heart-o"></i></a>';
                }
                },
                {"data": "description", "mRender":function (data) {
                    if (data.length>30){
                        return  "<span title='"+data+"'>"+data.substring(0,30)+"</span>"
                    }
                    return data;
                }},
                {"data": "configureId", "mRender": function(data, type, full) {
                    return '<button type="button" onclick="addConfig('+data+')" class="btn btn-sm btn-warning">编辑</button>&nbsp;'+
                           '<button type="button" onClick="deleteConfig('+data+')" class="btn btn-sm btn-danger">删除</button>&nbsp;' +
                            '<button type="button" onclick="addConfig('+data+',1)" class="btn btn-sm btn-success">克隆</button>&nbsp;';
                }
                },
            ],
            "fnRowCallback": function (row, data) { // 每行创建完毕的回调
                $(row).data('recordId', data.recordId);
            }
        });
    }

    loadData();
    // 查看模板的缓存信息
    function show_cache(name){
        url = "/monitor/configure/"+site+"/getCache";
        html = post({name:name}, url);
        $('#show_cache_detail_html').html(syntaxHighlight(JSON.stringify(html)));
        $('#show_cache').modal("toggle")
    }

</script>
