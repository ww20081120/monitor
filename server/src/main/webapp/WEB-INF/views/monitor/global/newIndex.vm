    function getData() {
        exclude = $.cookie(cookieName);
        if(!exclude){
            exclude= ""
        }
        html = ""
        url =  "/monitor/global/IndexData?t=" + new Date().getTime() + "&exclude="+exclude;
        result = post({}, url)
        data = eval(result)["data"];
        for (i=0;i<data.length;i++){
            html += setData(data[i],"", data[i]);
        }
        $('#alarmDiv').html("")
        $('#alarmDiv').html(html)
    }
    getData();

    function getUser(user) {
        if (user){
            return  '<span>负责人:</span>'+user;
        }
        return "<br>";
    }

    function getHostSize(size) {
        if (size+"" == "0"){
            return "<br>"
        }
        return    '<span>主机:'+size+'</span><br>'
    }

