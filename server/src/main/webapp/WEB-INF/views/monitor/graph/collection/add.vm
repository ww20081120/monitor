<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">

<body>
<div class="modal fade" id="add_getui_config" tabindex="-1"
     role="dialog" style="background-color: #FfFfFf; margin-top: 16px;"
     data-backdrop="false">
    <div class="modal-dialog"
         style="margin-top: 0px; width: 50%; ">
        <div class="modal-content"
             style="height: 410px; width: 100%; ">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">&nbsp;&nbsp;图像收藏</h4>
            </div>
            <div class="animated fadeInRight">
                <form>
                    <div class="col-md-12">
                        <p>&nbsp;
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">图像名称:</label>
                            <div class="col-sm-9">
                                <textarea type="text" name="images" class="form-control">$!{configs.images}</textarea>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <p>&nbsp;
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">ip地址:</label>
                            <div class="col-sm-9">
                                <textarea type="text" name="ip" class="form-control"
                                       >$!{configs.ip}</textarea>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <p>&nbsp;
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">描述信息:</label>
                            <div class="col-sm-9">
                                <input type="text" name="description" class="form-control"
                                       value="$!{configs.description}">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <p>&nbsp;
                    </div>
                </form>
            </div>
            <div class="modal-footer" style="border:solid 1px #e0e0e0">
            </div>
            <button style="margin-left: 77%;margin-top: 25px;"
                    onclick="saveConfig($!{configs.collectionId});" class="btn btn-primary btn-lg" type="button">
                <i class="fa fa-check"></i>&nbsp;保存
            </button>
        </div>
    </div>
</div>

</body>