<div id="wrapp11er">
    <div id="page-wrapp1er" class="gray-bg">
        #include("/index/header.vm")
        <div id="addConfig"></div>
        <br>
        <br>
        <div class="col-sm-12" style="margin-top:10px">
            <table id="listTable"
                   class="table  table-bordered table-hover dataTables-example">
                <thead>
                <tr role="rows">
                    <th >ip地址</th>
                    <th >图像名称</th>
                    <th >收藏时间</th>
                    <th>描述信息</th>
                    <th >最近修改时间</th>
                    <th >操作</th>
                    <th >修改</th>
                </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
