<script>//Flot Multiple Axes Line Chart

function getDatas() {
    startT = "${startT}"
    endT = "${endT}"
    if(startT){
        startT= startT.split(",")[0]
    }
    if(endT){
        endT= endT.split(",")[0]
    }

    datas = new Array();
    #foreach($ipadd in $ips)
        #foreach($name in $names)
            #foreach($n in $types.get($name))
                d = {}
                d["name"] = '${ipadd} ${n}';
                d["data"] = eval(post({}, "/monitor/graph/historyData?ip=${ipadd}&name=${n}&type=${name}&startT="+startT+"&endT="+endT));
                datas.push(d)
            #end
        #end
    #end
    return datas;
}

function data_sum(){
    datas = getDatas()
    new_datas = {}
    size = datas.length
    data_list = new Array();
    for(i=0;i<datas[0]["data"].length;i++){
        data = new Array();
        sum = 0
        for(j=0; j<size; j++){
            value = datas[j]["data"][i];
            if(value){
                sum += parseFloat(value[1])
            }
        }
        data[0] =  datas[0]["data"][i][0]
        data[1] = sum
        data_list.push(data)

    }
    new_datas["name"] = datas[0]["name"]
    new_datas["data"] = data_list
    return [new_datas]
}
function data_avg(){
    datas = getDatas()
    new_datas = {}
    size = datas.length
    data_list = new Array();
    for(i=0;i<datas[0]["data"].length;i++){
        data = new Array();
        sum = 0
        for(j=0; j<size; j++){
            value = datas[j]["data"][i];
            if(value){
                sum += parseFloat(value[1])
            }
        }
        data[0] =  datas[0]["data"][i][0]
        data[1] = sum / size
        data_list.push(data)

    }
    new_datas["name"] = datas[0]["name"]
    new_datas["data"] = data_list
    return [new_datas]
}

function get_datas(value){
    if (value == "sum"){
        return data_sum()
    }
    if (value == "avg"){
        return data_avg()
    }
    return getDatas()

}
function graphAll(data_type, colors) {
    if(!colors){
        xtype = "area"
    }else{
        xtype = "area"
    }

    if(!colors){
        colors= ['#2b908f', '#90ee7e', '#f45b5b', '#7798BF', '#aaeeee', '#ff0066', '#eeaaee','#55BF3B', '#DF5353', '#7798BF', '#aaeeee']
    }
    startT = $('#startSendTime').val()
    endT = $('#endSendTime').val()
    if (!startT) {
        startT = ""
    }
    if (!endT) {
        endT = ""
    }
    Highcharts.setOptions({
        global: {
            useUTC: false
        }
    });

    Highcharts.theme = {
        colors: ['#2b908f', '#90ee7e', '#f45b5b', '#7798BF', '#aaeeee', '#ff0066', '#eeaaee',
            '#55BF3B', '#DF5353', '#7798BF', '#aaeeee'],
        title: {
            style: {
                color: '#E0E0E3',
                //textTransform: 'uppercase',
                fontSize: '20px'
            }
        },
        subtitle: {
            style: {
                color: '#E0E0E3',
                textTransform: 'uppercase'
            }
        },
        xAxis: {
            type: 'datetime',
            tickPixelInterval: 113,
            gridLineWidth: 1,
            gridLineColor: '#f0f0f1',
        },
        plotOptions: {
            series: {
                dataLabels: {
                    color: '#B0B0B3'
                },
