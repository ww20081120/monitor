                                    <input type="checkbox" name="isGrid" id="id_grid"
                                           onchange="change(this)" #if( $configs.isWeixin == "1" )
                                           checked   #end
                                           value="#if($configs.isGrid)$!{configs.isGrid}#else 1 #end">
                                    <label for="is_grid"></label>
                                </div>
                            </div>
