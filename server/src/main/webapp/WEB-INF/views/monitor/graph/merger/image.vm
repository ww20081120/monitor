                            <div class="col-sm-8">
                                <select name="imageTp" class="form-control">
                                    <option value="">--请选择--</option>
                                    <option value="line">line</option>
                                    <option value="area">area</option>
                                    <option value="bar">bar</option>
                                    <option value="pie">pie</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <p></p>
                    </div>
                    <div class="col-md-6">
