<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">

<body>
<div class="modal fade" id="add_getui_config" tabindex="-1"
     role="dialog" style="background-color: #FfFfFf; margin-top: 16px;"
     data-backdrop="false">
    <div class="modal-dialog"
         style="margin-top: 0px; width: 40%; ">
        <div class="modal-content"
             style="height: 340px; width: 90%; ">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">&nbsp;&nbsp;操作系统类型配置</h4>
            </div>
            <div class="animated fadeInRight">
                <form>
                    <div class="col-md-12">
                        <p>&nbsp;
                        </p>
                    </div>

                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">操作系统名称:</label>
                            <div class="col-sm-9">
                                <input type="text" name="osName" class="form-control"
                                       value="$!{configs.osName}">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <p>&nbsp;
                        </p>
                    </div>

                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">图片路径:</label>
                            <div class="col-sm-9">
                                <input type="text" name="imagePath" class="form-control"
                                       value="$!{configs.imagePath}">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <p>&nbsp;
                        </p>
                    </div>
                </form>
                <div class="col-md-12">
                    <p>
                    &nbsp;
                    <p>
                </div>

            </div>
            <div class="modal-footer" style="border:solid 1px #e0e0e0">
            </div>
            <button style="margin-left: 75%;margin-top: 15px;"
                    onclick="saveConfig($!{configs.osId});" class="btn btn-primary btn-lg"
                    type="button">
                <i class="fa fa-check"></i>&nbsp;提交
            </button>
        </div>

    </div>
</div>

</body>
